@model (string, ICollection<Models.Dimension>)

@if (Model.Item2.Any())
{
    <dt>@Model.Item1 [mm]</dt>
    <dd>
        @{
            var sb = new System.Text.StringBuilder();
            if (Model.Item2.Single().FirstDimensionMillimetre.Any())
            {
                sb.AppendLine($"First: {Model.Item2.Single().FirstDimensionMillimetre.Single()}");
            }
            if (Model.Item2.Single().SecondDimensionMillimetre.Any())
            {
                sb.AppendLine($"Second: {Model.Item2.Single().SecondDimensionMillimetre.Single()}");
            }
            <text>@sb.ToString().Replace(Environment.NewLine, " ")</text>
        }
    </dd>
}