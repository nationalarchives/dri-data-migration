@model Models.Subset

@{
    var location = Models.FlatJsonAsset.SubsetLocation(Model);
    if (!string.IsNullOrWhiteSpace(location.Original))
    {
        <dt>Location</dt>
        <dd>@location.Original</dd>
        if (!string.IsNullOrWhiteSpace(location.Published) &&
                !location.Original.Equals(location.Published))
        {
            <dt>Published location</dt>
            <dd>@location.Published</dd>
        }
    }
}
