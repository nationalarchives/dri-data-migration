prefix ex: <http://id.example.com/schema/>

construct {
    ?subset ex:subsetReference ?subsetReference;
        ex:subsetHasBroaderSubset ?broaderSubset;
        ex:subsetHasRetention ?retention.
    ?retention ex:importLocation ?importLocation.
} where {
    bind(@id as ?subsetReference)
    ?subset ex:subsetReference ?subsetReference.
    optional { ?subset ex:subsetHasBroaderSubset ?broaderSubset }
    optional {
        ?subset ex:subsetHasRetention ?retention.
        optional { ?retention ex:importLocation ?importLocation }
    }
}